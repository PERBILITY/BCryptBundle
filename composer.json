{
    "name": "perbility/bcrypt-bundle",
    "type": "symfony-bundle",
    "description": "This bundle provides an easy way to create and work with BCrypt-hashes in a Symfony2-context",
    "keywords": ["crypt", "bcrypt", "hash", "password"],
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Benjamin Zikarsky",
            "email": "benjamin.zikarsky@perbility.de"
        }
    ],
    "require": {
        "symfony/framework-bundle": "~2.1",
        "symfony/security-bundle": "~2.1",
        "php": "~5.3"
    },
    "require-dev": {
        "symfony/console": "~2.1"
    },
    "autoload": {
        "psr-0": {
            "Perbility\\Bundle\\BCryptBundle": ""
        }
    },
    "target-dir": "Perbility/Bundle/BCryptBundle"
}
